---
interface Props{
    version: string
    description:string
    relased: string
}

const {version, relased, description} = Astro.props

---

    <div class="flex items-center">
        <div class="z-10 flex items-center justify-center w-6 h-6 bg-gray-900 rounded-full ring-2 ring-white dark:bg-blue-900 sm:ring dark:ring-gray-900 shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-notebook" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 4h11a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-11a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1m3 0v18" /><path d="M13 8l2 0" /><path d="M13 12l2 0" /></svg>
        </div>
        <div class="hidden sm:flex w-full bg-gray-200 h-0.5 dark:bg-gray-700"></div>
    </div>
    <div class="mt-3 sm:pe-8">
        <h3 class="text-lg font-semibold text-yellow-200 dark:text-white">{version}</h3>
        <time class="block mb-3 mt-1 text-sm font-normal leading-none text-gray-500 dark:text-gray-500">{relased}</time>
        <p class="text-base font-normal text-gray-100 dark:text-gray-400 text-balance">{description}</p>
    </div>