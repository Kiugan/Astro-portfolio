---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Header from '../components/Header.astro';
import Badge from '../components/Badge.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
---

<Layout title="PortFolio de Kiugan - Desarollador y Programador web"
		description="Contrata a kiugan para que forme parte de tus desarrollos y aporte sus conocimientos a tus proyectos.">
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-4">
				Hey, soy Kiugan <a href="https://www.linkedin.com/in/kiugan/" target="_blank" rel="noopener" class="flex justify-center items-center pt-4">
				<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				+15 Años de experiencia, Desarollador web y creador de contenido. De Barcelona, España. Especializado en cosas
			</h2>

			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/kiugan/">
					<LinkedInIcon class="size-6"/>
					LinkedIn 
				</SocialPill>
				<SocialPill href="https://github.com/Kiugan">
					<GitHubIcon class="size-6"/>
					GitHub 
				</SocialPill>
				<SocialPill href="https://www.linkedin.com/in/kiugan/">
					<MailIcon class="size-6"/>
					tec.medinaeze@gmail.com 
				</SocialPill>
			</nav>
		</section>
	</main>
</Layout>